@{
    ViewData["Title"] = "Recover Password";
    Layout = "~/Views/Login/Layout/LoginLayout.cshtml";
}
@section style{
    <style>
        #loading {
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
            position: fixed;
        }

            #loading:has(div) {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                text-align: center;
            }

            .card-fp{
            border: 1px solid #f2f2f2;
            padding: 15px;
            border-radius: 25px;
            }

        </style>
}
<div class="login-box">
    <div class="card card-fp shadow " id="box">
    <div class="card-header text-center">
            <img src='https://www.berca.co.id/wp-content/uploads/2019/09/logo_berca1.png' alt='PT.Berca Hardayaperkasa'>
    </div>
    <div class="card-body">
      <form action="#" method="post" id="recoverPassword-form">
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="Kata Sandi Baru" id="pass" required>
          <div class="input-group-append">
            <div class="input-group-text">
              <span toggle="#pass" class="fa fa-fw fa-eye field-icon toggle-password" style="cursor:pointer"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="Konfirmasi Kata Sandi Baru" id="re-pass" required>
          <div class="input-group-append">
            <div class="input-group-text">
              <span toggle="#re-pass" class="fa fa-fw fa-eye field-icon toggle-password" style="cursor:pointer"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block" id="btn-cp">Ubah Kata Sandi</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <p class="mt-3 mb-1">
          Ingat Kata Sandi? 
        <a href="login.html">Masuk</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<div id="loading" style="width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 999; display: none; position: fixed;">
    <div id="loading-content" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
        <i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color: white;"></i>
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- /.login-box -->
@section script{
    <script src="~/js/recoverPassword.js"></script>

}
