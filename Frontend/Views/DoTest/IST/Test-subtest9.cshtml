@{
    ViewData["Title"] = "View";
    Layout = "~/Views/DoTest/TestLayout/MoreQuestionLayout.cshtml";
}
@section style{
    <style>
        .card {
            padding: 0 20px;
        }

        .namaSub {
            margin: 0 -20px 0.5rem -20px;
        }

        #ujian-form {
            max-height: 450px;
            overflow-y: auto;
            overflow-x: hidden;
        }

        #subtes-container .card {
            margin-bottom: 0.5rem;
        }

        
        #ujian-form .but-start-ist {
            width: 100%;
            text-align: right;
            margin: 1rem 0;
        }

            #ujian-form .but-start-ist button {
                width: 150px;
                height: 40px;
                display: block;
                margin: 0 auto;
                border-radius: 10px;
                font-size: 1.2rem;
                text-transform: capitalize;
                background-color: #36b9cc;
                color: #ffffff;
                border: none;
            }
    </style>
}
<div class="shadow-sm border rounded  bg-dark p-3 row namaSub">
    <h5 class="col-6 text-left">
        <span id="numSubTest">
            SubTes
        </span>
    </h5>
    <h5 id="showTimeTest" class="col-6 text-right">
        <i class="fas fa-stopwatch"></i>
        <span id="timeTest">
            00h:00m:00s
        </span>
    </h5>
</div>
<form id="ujian-form" action="" method="post">
    <div id="subtes-container">
        <!-- Isi pertanyaan dan pilihan ganda akan diisi melalui JavaScript -->
    </div>

    <div class="but-start-ist">
        <button id="nextButton" type="button" onclick="nextSubtes()" style="display: none">Selanjutnya</button>
    <button id="finishButton" type="submit" style="display: none">Selesai</button>
    </div>

</form>
<div id="loading" style="width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 999; display: none; position: fixed; top: 0; left: 0;">
    <div id="loading-content" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
        <i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color: white;"></i>
        <span class="sr-only">Loading...</span>
    </div>
</div>
@section script{
    <!-- Script eksternal Test -->
    <script src="~/js/Participant/IST.js"></script>

}
