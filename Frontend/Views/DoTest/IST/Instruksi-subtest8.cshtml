                }
            });
            $("input[name='contoh04_8']").change(function () {
                var num = $("input[name='contoh04_8']:checked").val();

                if (num.toLowerCase() === "c") {
                    $("#warningMessage4").hide();
                } else {
                    $("#warningMessage4").show();
                }
            });


            function checkValue(inputName, expectedValue) {
                var inputValue = $("input[name='" + inputName + "']:checked").val() || "";
                return inputValue.toLowerCase() === expectedValue;
            }
            $("#startSubtest").click(function () {
                const isActiveSubtest = sessionStorage.getItem("indexSubtest");
                var targetUrl = `/dotest/StartTest/ist/subtes${isActiveSubtest}`;

                var inpVal1 = checkValue("contoh01_8", "a");
                var inpVal2 = checkValue("contoh02_8", "e");
                var inpVal3 = checkValue("contoh03_8", "b");
                var inpVal4 = checkValue("contoh04_8", "c");

                if (!inpVal1) {
                    $("#warningMessage1").show();
                }
                if (!inpVal2) {
                    $("#warningMessage2").show();
                }
                if (!inpVal3) {
                    $("#warningMessage3").show();
                }
                if (!inpVal4) {
                    $("#warningMessage4").show();
                }

                if (inpVal1 && inpVal2 && inpVal3 && inpVal4) {
                    window.location.href = targetUrl;
                    displaytest(testId, isActiveSubtest);
                }
            });
        });
    </script>
