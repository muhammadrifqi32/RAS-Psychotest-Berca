<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 id="ttt">Test Category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Test Category</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row justify-content-between align-items-center">
                        <h3 class="card-title text-muted text-justify">Test category is type level category, and that determines the number of tests.</h3>
                        <button href="#" class="btn btn-success btn-sm col-auto" id="AddTestCategoryButton">
                            + Add Test Category
                        </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="TblTestCategory" class="table table-bordered table-striped text-justify">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Test Category</th>
                                    <th>Test Kit</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <!-- Modal -->
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title">Test Category</h3>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal();">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="Id" placeholder="Id" required hidden>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="before" hidden>
                                        </div>
                                        <div class="form-group">
                                            <label for="Name" class="form-label">Test Category *</label>
                                            <select style="cursor:pointer" class="form-control" id="testCategory" required onchange="handleDropdownChange()">
                                                <option selected disabled style="background-color:#E9ECEF !important">Level Test Category</option>
                                                <option id="managerOption" value="Manager">Manager</option>
                                                <option id="nonManagerOption" value="Non-Manager">Non-Manager</option>
                                                <option id="customizeOption"  value="Customize">Customize</option>
                                            </select>
                                            <input type="text" class="form-control" id="cust" style="display:none" disabled>
                                        </div>
                                        <div class="form-group acc" id="tesname" style="display:none;">
                                            <label for="testname">Test Category Name</label>
                                            <input type="text" class="form-control" id="testname" placeholder="Enter Test Name" >
                                            <span id="errorMessage" style="color: red;"></span>
                                        </div>
                                        
   

                                        <!-- Card Tabel Test -->
                                        <div class="card card-default mt-4">
                                            
                                            <div class="card-header">
                                                <h4 class="card-title">
                                                    <p>Access Test Participant Tools. This setting serves to provide automatic access to participants after registration.</p>
                                                </h4>
                                            </div>
                                            <div class="card-body">
                                                <table id="Tbltestkit" class="table table-bordered table-striped " style="width:100%; text-align:left">
                                                    <thead>
                                                        <tr>
                                                            <th>No.</th>
                                                            <th>Test Name</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </div>
                                        </div>
                                        <!-- End of Card Tabel Test -->

                                    </div>
                                    <!-- /.card-body -->

                                    <div class="card-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="SaveBtn" onclick="Save();">Submit</button>
                                        <button type="button" class="btn btn-warning" data-dismiss="modal" id="UpdateBtn" onclick="Update();">Edit</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="closeModal();">Close</button>

                                    </div>
                                </form>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- / .Modal -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

     <!-- Animasi loading -->
    <div id="loading" style="width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 999; display: none; position: fixed; top: 0; left: 0;">
        <div id="loading-content" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
            <i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color: white;"></i>
            <span class="sr-only">Loading...</span>
        </div>
    </div>

</section>
<!-- /.content -->
