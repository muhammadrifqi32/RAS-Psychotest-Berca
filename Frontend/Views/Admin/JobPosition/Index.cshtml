
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLTELayout/AdminLTELayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Manage Job Position</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Manage Job Position</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row justify-content-between align-items-center">
                            <h3 class="card-title text-muted text-justify">Manage Job Position</h3>
                            <!-- Button trigger modal -->
                            <button id="createUserBtn" type="button" class="btn btn-success btn-sm" onclick="ClearScreen()">
                                + Create Job Position
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                        <!-- Modal -->
                        <div class="modal fade" id="myModal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title">Job Position</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal();">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="card-body">
                                        <form>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="Id" placeholder="Id" hidden>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="before" hidden>
                                            </div>
                                            <div class="form-group">
                                                <label for="Name" class="form-label">Job Position *</label>
                                                <input type="text" class="form-control" placeholder="Name Job Position.." id="NameJobPosition" pattern="\d{1,50}" required>
                                            </div>
                                            <!-- /.col -->
                                           

                                            <div class="card-footer">
                                                <button type="button" class="btn btn-primary" data-dismiss="modal" id="SaveBtn" onclick="Save();">Submit</button>
                                                <button type="button" class="btn btn-warning" data-dismiss="modal" id="UpdateBtn" onclick="Update();">Edit</button>
                                                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="closeModal();">Close</button>

                                            </div>
                                        </form>

                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
                    <div class="card-body">
                        <!-- / .Modal -->
                        <!-- Tabel -->
                            <table id="TblJobPosition" class="table table-bordered table-striped display nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Position</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        <!-- Tabel -->
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

    <!-- Animasi loading -->
    <div id="loading" style="width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 999; display: none; position: fixed; top: 0; left: 0;">
        <div id="loading-content" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
            <i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color: white;"></i>
            <span class="sr-only">Loading...</span>
        </div>
    </div>

</section>
<!-- /.content -->
@section script{
    <script src="~/js/Admin/JobPosition.js"></script>
    <script>
        //maksimum input pada kolom
        $(document).ready(function () {
            $('#NameJobPosition').on('input', function () {
                var maxNikLength = 50; // Panjang maksimum input

                if ($(this).val().length > maxNikLength) {
                    $(this).val($(this).val().slice(0, maxNikLength)); // Memotong input jika lebih panjang
                }
            });
        });
    </script>
}

